<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Greetings.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Właściwości czcionki" Style="{DynamicResource Header}"/>
            <Label Text="Rozmiar:" Style="{DynamicResource Output}" x:Name="Output"/>
            <Slider x:Name="FontSizeSlider"
                    Minimum="0"
                    Maximum="40"
                    Value="1"
                    ValueChanged="FontSizeChanged"/>
            <Label Text="" x:Name="Quote"/>
            <Button Text="&gt;&gt;" Clicked="BtnClicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
