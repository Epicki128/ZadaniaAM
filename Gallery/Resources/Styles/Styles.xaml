<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--#################################### MY STYLES #########################################################-->

    <Style TargetType="FlexLayout" x:Key="bgGreen">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundGreen}"/>
    </Style>

    <Style TargetType="FlexLayout" x:Key="bgBlue">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundBlue}"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="WidthRequest" Value="100"/>
    </Style>

    <Style TargetType="Image">
        <Setter Property="Aspect" Value="AspectFill"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="Black"/>
    </Style>

    <Style TargetType="Label" x:Key="header">
        <Setter Property="FontSize" Value="Large"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
        <Setter Property="TextColor" Value="White"/>
    </Style>

    <Style TargetType="Label" x:Key="footer">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
    </Style>
    <!--########################################################################################################-->

</ResourceDictionary>
